# EditorConfig settings for consistent coding styles
root = true

[*]
# Indentation
indent_style = tab
indent_size = 2

# Line width (Print Width in Prettier)
max_line_length = 120

# Line endings
end_of_line = lf

# Final newline at end of file
insert_final_newline = true

# Trim trailing whitespace
trim_trailing_whitespace = true

# Specific overrides for JSON files
[*.json]
indent_style = space
indent_size = 2
end_of_line = lf
